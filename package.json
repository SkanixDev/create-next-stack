{
  "name": "create-next-stack",
  "description": "Create Next Stack is a website and CLI tool used to easily set up the boilerplate of new Next.js apps.",
  "version": "0.1.6",
  "author": "Anders KjÃ¦r Damgaard @akd-io",
  "bugs": "https://github.com/akd-io/create-next-stack/issues",
  "homepage": "https://github.com/akd-io/create-next-stack",
  "repository": "akd-io/create-next-stack",
  "license": "MIT",
  "keywords": [
    "react",
    "cli",
    "template",
    "boilerplate",
    "typescript",
    "web",
    "eslint",
    "frontend",
    "nextjs",
    "prettier",
    "starter",
    "starter-kit",
    "scaffolding"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "oclif": {
    "bin": "create-next-stack"
  },
  "bin": {
    "create-next-stack": "./bin/run"
  },
  "files": [
    "/bin",
    "/lib/main",
    "/prod-assets"
  ],
  "exports": {
    "./package.json": "./package.json"
  },
  "types": "lib/index.d.ts",
  "scripts": {
    "prepare": "husky install",
    "prepack": "yarn build && oclif-dev readme",
    "check-types": "tsc --noEmit",
    "build": "rimraf lib && tsc --build",
    "test": "yarn build && yarn run test-only",
    "test-only": "node lib/tests/e2e/test.js",
    "test:manual": "yarn build && node lib/tests/e2e/manual-test.js --debug",
    "test:small": "yarn build && node lib/tests/e2e/manual-test.js --debug --package-manager=npm --styling=css-modules",
    "test:large": "yarn build && node lib/tests/e2e/manual-test.js --debug --package-manager=yarn --styling=emotion --react-hook-form --formik --prettier --formatting-pre-commit-hook --chakra --framer-motion --github-actions",
    "version": "oclif-dev readme && git add README.md",
    "format": "prettier --write --ignore-path=.prettierignore .",
    "format:check": "prettier --check --ignore-path=.prettierignore .",
    "lint": "eslint --ext=.ts --config=.eslintrc --ignore-path=.gitignore ."
  },
  "lint-staged": {
    "*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "@oclif/command": "^1.8.0",
    "@oclif/config": "^1.17.0",
    "@oclif/errors": "^1.3.4",
    "@oclif/plugin-help": "^3.2.2",
    "chalk": "^4.1.1",
    "endent": "^2.1.0",
    "execa": "^5.1.1",
    "inquirer": "^8.1.1",
    "rimraf": "^3.0.2",
    "tslib": "^2.3.0",
    "validate-npm-package-name": "^3.0.0"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1.26.0",
    "@types/inquirer": "^7.3.2",
    "@types/node": "^16.4.7",
    "@types/rimraf": "^3.0.1",
    "@types/uuid": "^8.3.1",
    "@types/validate-npm-package-name": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.1",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.2",
    "ts-node": "^10.0.0",
    "typescript": "^4.9.0",
    "uuid": "^8.3.2"
  }
}
