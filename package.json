{
  "name": "create-next-stack-root",
  "private": true,
  "version": "0.0.0",
  "description": "Create Next Stack monorepo",
  "author": "Anders Kj√¶r Damgaard",
  "license": "MIT",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "format": "prettier --write --ignore-path=.gitignore .",
    "format:check": "prettier --check --ignore-path=.gitignore .",
    "build": "pnpm prr build",
    "build:cli": "pnpm prr --filter create-next-stack build",
    "build:web": "pnpm prr --filter create-next-stack-website build",
    "lint": "pnpm prr lint",
    "lint:cli": "pnpm prr --filter create-next-stack lint",
    "lint:web": "pnpm prr --filter create-next-stack-website lint",
    "test": "pnpm prr test",
    "test:cli": "pnpm prr --filter create-next-stack test",
    "test:web": "pnpm prr --filter create-next-stack-website test",
    "prr": "pnpm recursive run"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "prettier": "^2.3.2",
    "typescript": "^4.9.5"
  },
  "lint-staged": {
    "*": "prettier --write --ignore-unknown"
  }
}
